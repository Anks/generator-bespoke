@import 'nib'

/* base */

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* bespoke.js layout styles */

article {
  transition: background .3s ease;
  display: none;

  &.bespoke-parent {
    display: block;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: hidden;
  }
}

.bespoke-slide {
  transition: all .3s ease;
  display: block;
  width: 640px;
  height: 480px;
  position: absolute;
  top: 50%;
  margin-top: -240px;
  left: 50%;
  margin-left: -320px;
  background: #f0f0f0;
  padding: 40px;
  border-radius: 10px;
}

.bespoke-before {
  transform: translateX(-100px);
}

.bespoke-after {
  transform: translateX(100px);
}

.bespoke-inactive {
  opacity: 0;
  pointer-events: none;
}

.bespoke-active {
  opacity: 1;
}<% if (bullets) { %>

/* bespoke-bullet styles */

.bespoke-bullet {
  transition: all .3s ease;
}

.bespoke-bullet-inactive {
  opacity: 0;

  li& {
    transform: translateX(16px);
  }
}

.bespoke-bullet-active {
  opacity: 1;
}<% } %><% if (state) { %>

/* bespoke-state styles */

.emphatic,
.emphatic .bespoke-slide {
  background: #e0e0e0;
}<% } %>

/* typography */

body {
  font-family: helvetica, arial, sans-serif;
  font-size: 18px;
  color: #404040;
}

